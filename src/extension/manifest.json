{
    "manifest_version": 2,
    "name": "DataWallet",
    "version": "0.1",
    "description": "Official UniverseAI Data Wallet",
    "homepage_url": "https://github.com/universe-ai/datawallet",
    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png"
    },
    "permissions": [
        "activeTab"
    ],
    "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'none';",
    "background": {
        "page": "background-page.html",
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icons/32.png",
        "default_title": "Official UniverseAI Data Wallet",
        "default_popup": "popup.html"
    }
}
